{
  "info": {
    "name": "MERN Restaurant - Users API",
    "description": "User management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api"
    },
    {
      "key": "superAdminToken",
      "value": ""
    },
    {
      "key": "adminToken",
      "value": ""
    },
    {
      "key": "userId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "SuperAdmin - Get All Users",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/users?page=1&limit=10",
          "query": [
            {"key": "page", "value": "1"},
            {"key": "limit", "value": "10"}
          ]
        },
        "header": [
          {"key": "Authorization", "value": "Bearer {{superAdminToken}}"}
        ]
      }
    },
    {
      "name": "SuperAdmin - Get Admins",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/users/admins",
        "header": [
          {"key": "Authorization", "value": "Bearer {{superAdminToken}}"}
        ]
      }
    },
    {
      "name": "Admin - Get Store Managers",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/users/store-managers",
        "header": [
          {"key": "Authorization", "value": "Bearer {{adminToken}}"}
        ]
      }
    },
    {
      "name": "Admin/SuperAdmin - Create User",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/users",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{superAdminToken}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userName\": \"newstore\",\n  \"email\": \"newstore@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"storeManager\"\n}"
        }
      }
    },
    {
      "name": "User/Self - Update Profile",
      "request": {
        "method": "PATCH",
        "url": "{{baseUrl}}/users/:id",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{superAdminToken}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userName\": \"updatedname\"\n}"
        }
      }
    },
    {
      "name": "User/Self - Delete Account",
      "request": {
        "method": "DELETE",
        "url": "{{baseUrl}}/users/:id",
        "header": [
          {"key": "Authorization", "value": "Bearer {{superAdminToken}}"}
        ]
      }
    },
    {
      "name": "User/Self - Deactivate Account",
      "request": {
        "method": "PATCH",
        "url": "{{baseUrl}}/users/:id/deactivate",
        "header": [
          {"key": "Authorization", "value": "Bearer {{superAdminToken}}"}
        ]
      }
    },
    {
      "name": "SuperAdmin - Restore User",
      "request": {
        "method": "PATCH",
        "url": "{{baseUrl}}/users/:id/restore",
        "header": [
          {"key": "Authorization", "value": "Bearer {{superAdminToken}}"}
        ]
      }
    },
    {
      "name": "Admin - Assign Restaurant",
      "request": {
        "method": "PATCH",
        "url": "{{baseUrl}}/users/:id/restaurant",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{superAdminToken}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"restaurantId\": \"restaurant-id-here\"\n}"
        }
      }
    },
    {
      "name": "SuperAdmin - Change Owner",
      "request": {
        "method": "PATCH",
        "url": "{{baseUrl}}/users/:id/owner",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{superAdminToken}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"newAdminId\": \"new-admin-user-id\"\n}"
        }
      }
    },
    {
      "name": "Admin - Unassign Restaurant",
      "request": {
        "method": "DELETE",
        "url": "{{baseUrl}}/users/:id/restaurant",
        "header": [
          {"key": "Authorization", "value": "Bearer {{superAdminToken}}"}
        ]
      }
    }
  ]
}
